# This overrides the PCL libraries with pcl_catkin libraries. Also adds VTK libs as pcl needs them.
file(GLOB PclLibraries @CATKIN_DEVEL_PREFIX@/lib/libpcl*)
# These lines make sure that we don't export pcl_ros libraries.
list(REMOVE_ITEM PclLibraries @CATKIN_DEVEL_PREFIX@/lib/libpcl_ros_features.dylib)
list(REMOVE_ITEM PclLibraries @CATKIN_DEVEL_PREFIX@/lib/libpcl_ros_filters.dylib)
list(REMOVE_ITEM PclLibraries @CATKIN_DEVEL_PREFIX@/lib/libpcl_ros_io.dylib)
list(REMOVE_ITEM PclLibraries @CATKIN_DEVEL_PREFIX@/lib/libpcl_ros_segmentation.dylib)
list(REMOVE_ITEM PclLibraries @CATKIN_DEVEL_PREFIX@/lib/libpcl_ros_surface.dylib)
list(REMOVE_ITEM PclLibraries @CATKIN_DEVEL_PREFIX@/lib/libpcl_ros_tf.dylib)

set(PCL_LIBRARIES ${PclLibraries};${VTK_LIBRARIES};@Boost_LIBRARIES@)
set(@PROJECT_NAME@_LIBRARIES ${PclLibraries};${VTK_LIBRARIES};@Boost_LIBRARIES@)

# Same thing for include dirs.
set(PCL_INCLUDE_DIRS @CATKIN_DEVEL_PREFIX@/include/pcl-1.8;${VTK_INCLUDE_DIRS};@Boost_INCLUDE_DIRS@)
set(@PROJECT_NAME@_INCLUDE_DIRS @CATKIN_DEVEL_PREFIX@/include/pcl-1.8;${VTK_INCLUDE_DIRS};@Boost_INCLUDE_DIRS@)
