find_package(VTK 6 REQUIRED COMPONENTS vtkRenderingOpenGL vtkInteractionStyle vtkRenderingVolumeOpenGL vtkCommonCore vtkRenderingCore NO_MODULE)
include (${VTK_USE_FILE})

# This overrides the PCL libraries with pcl_catkin libraries. Also adds VTK libs as pcl needs them.
file(GLOB PclLibraries @CATKIN_DEVEL_PREFIX@/lib/libpcl*)
list(FILTER PclLibraries EXCLUDE REGEX ".*libpcl_ros.*")
set(PCL_LIBRARIES ${PclLibraries};${VTK_LIBRARIES};@Boost_LIBRARIES@)
set(@PROJECT_NAME@_LIBRARIES ${PclLibraries};${VTK_LIBRARIES};@Boost_LIBRARIES@)

# Same thing for include dirs.
set(PCL_INCLUDE_DIRS @CATKIN_DEVEL_PREFIX@/include/pcl-1.8;${VTK_INCLUDE_DIRS};@Boost_INCLUDE_DIRS@)
set(@PROJECT_NAME@_INCLUDE_DIRS @CATKIN_DEVEL_PREFIX@/include/pcl-1.8;${VTK_INCLUDE_DIRS};@Boost_INCLUDE_DIRS@)
